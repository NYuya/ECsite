<div class="row">
  <h3 class="col-xs-offset-2 col-xs-3">登録情報編集</h3>
</div>
<div class="row">
  <%= form_for(current_customer) do |f| %>
    <table class="table">
      <tr>
        <th><%= f.label :last_name, "名前" %></th>
        <th>(姓)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %></th>
      </tr>

      <tr>
        <th><%= f.label :last_name_kana, "フリガナ" %></th>
        <th>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %></th>
      </tr>

      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <th><%= f.text_field :email %></th>
      </tr>

      <tr>
        <th><%= f.label :post_code, "郵便番号(ハイフンなし)" %></th>
        <th><%= f.text_field :post_code %></th>
      </tr>

      <tr>
        <th><%= f.label :address, "住所" %></th>
        <th><%= f.text_field :address %></th>
      </tr>

      <tr>
        <th><%= f.label :phone_number, "電話番号(ハイフンなし)" %></th>
        <th><%= f.text_field :phone_number %></th>
      </tr>
      <div class="action row">
        <tr>
          <td><%= f.submit '編集内容を保存する', class: "btn btn-primary" %></td>
          <td><%= link_to "退会する",  customers_confirm_path, class: "btn btn-danger" %></td>
        </tr>
      </div>
    </table>
  <% end %>
</div>

