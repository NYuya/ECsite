<h2>商品 詳細画面</h2>
<table class="table table-hover">
	<tbody>
        <tr>
            <div class="item_image">
                <%= attachment_image_tag @item, :image, size: '200x200',format: "jpeg",fallback: "cake.png" %>
            </div>
            <tr><td>商品名</td><td><%= @item.name %></td></tr>
            <tr><td>商品詳細</td><td><%= @item.description %></td></tr>
            <tr><td>商品価格</td><td><%= @item.price %> 円</td></tr>
            <tr>
                <td></td>
                <td>
                    <% if @item.is_sale_status == false %>
                        <span class="text-danger">販売停止中</span>
					<% else %>
						<span class="text-success">販売中</span>
                    <% end %>
                </td>
            </tr>
        </tr>
	</tbody>
</table>

<div class="row">
	<%= link_to '編集する',edit_admins_item_path(@item), class: " btn btn-primary pull-right" %>
</div>