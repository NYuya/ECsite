<h2>商品一覧画面</h2>
<a href="items/new" class="btn-circle-3d pull-right" ><span style="font-size:2em;">
<button type="submit" class="btn btn-primary btn-lg pull-right">新商品登録</button></span></a>
<table class="table table-hover">
	<thead class="thead-lignt">
		<tr>
			<th>会員ID</th>
			<th>クリエイトタイム</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.created_at %></td>
				<td><%= link_to item.name, admins_item_path(item.id) %></td>
				<td><%= item.description %></td>
				<td><%= item.price %></td>
				<td>
					<% if item.is_sale_status == false %>
						<span class="text-success">販売中</span>
					<% else %>
						<span class="text-danger">販売停止中</span>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

