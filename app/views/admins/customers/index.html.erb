<h2>顧客一覧画面</h2>
<table class="table table-hover">
	<thead class="thead-lignt">
		<tr>
			<th>会員ID</th>
			<th>クリエイトタイム</th>
			<th>氏名 (姓,名)</th>
			<th>メールアドレス</th>
			<th>電話番号</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @customers.each do |customer| %>
			<tr>
				<td><%= customer.id %></td>
				<td><%= customer.created_at %></td>
				<td><%= link_to customer.last_name, admins_customer_path(customer.id) %>
                <%= link_to customer.first_name, admins_customer_path(customer.id) %></td>
				<td><%= customer.email %></td>
				<td><%= customer.phone_number %></td>
				<td>
					<% if customer.is_member_status == false %>
						<span class="text-success">会員</span>
					<% else %>
						<span class="text-danger">停止中</span>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

