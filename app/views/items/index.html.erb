
<% @items.each do |item| %>
    <div class="flex_test-item">
        <%= link_to item_path(item) do %>
            <div class="item_image">
                <%= attachment_image_tag item, :image, size: '200x200',format: "jpeg",fallback: "cake.png" %>
            </div>
            <p><%= item.name %></p>
            <p><%= item.price.to_s(:delimited) %>(税込)</p>
        <% end %>
        <% if item.is_sale_status == false %>
            <span class="text-danger">売り切れ</span>
        <% else %>
            <span class="text-success">販売中</span>
        <% end %>
    </div>
<% end %>